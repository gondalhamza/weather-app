<div class="row" id="weather-update-index-page">
	<div class="row">
		<div class="col-sm-12 col-md-12 col-lg-12">
			<div class="row">
				<div class="col-sm-3 col-md-3 col-lg-3"></div>
				<div class="col-sm-6 col-md-6 col-lg-6">
					<h3 class="aaas">Enter Your City To Get Weather Update</h3>
				</div>
				<div class="col-sm-3 col-md-3 col-lg-3"></div>
			</div>
		</div>
	</div>
	<br/>
	<div class="row">
		<div class="col-sm-12 col-md-12 col-lg-12">
			<div class="row">
				<div class="col-sm-3 col-md-3 col-lg-3"></div>
				<div class="col-sm-6 col-md-6 col-lg-6">
					<%= form_tag root_path, :method => 'get' do %>
						<%= select_tag :location_id, options_from_collection_for_select(@cities, :city_id, :name_with_city_code, params[:location_id]), include_blank: 'Select City', class: 'form-control', id: 'get-city-weather-update', data: { remote: true, method: 'post', url: url_for( action: :get_weather) } %>
					<% end %>
				</div>
				<div class="col-sm-3 col-md-3 col-lg-3"></div>
			</div>
		</div>
	</div>

	<div class="row weather-update">
	</div>
</div>
